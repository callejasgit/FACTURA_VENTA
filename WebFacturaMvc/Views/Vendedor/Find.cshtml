@model Model.Entity.Vendedor
@{
    ViewBag.Title = Model.Nombre + ' ' + Model.Appaterno;
}

<ol class="breadcrumb">
    <li><a href="~/">Vendedor</a></li>
    <li class="active">@(Model.Nombre + ' ' + Model.Appaterno)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">Informacion Personal</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Código</dt>
            <dd>@Model.IdVendedor</dd>

            <dt>Nombre</dt>
            <dd>@Model.Nombre</dd>

            <dt>Apellidos</dt>
            <dd>@(Model.Appaterno + ' ' + Model.Apmaterno)</dd>

            <dt>DNI</dt>
            <dd>@Model.Dni</dd>

            <dt>Teléfono</dt>
            <dd>@Model.Telefono</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink("Regresar al Listado", "Index")
    </div>
</div>
