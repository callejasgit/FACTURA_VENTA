@using Model.Entity
@model List<Producto>
@{
    ViewBag.Title = "BuscarPorCodigo";
}
<div class="panel panel-default">
    <div class="panel-heading" style="background:#2C3E50; color:#ffffff;"><h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Producto por:</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm())
            {
            <div class="form-horizontal">
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-4">
                            @Html.Label("Nombre", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.Label("Codigo", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtproducto", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.Label("Categorias", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9 dropdown">
                                @*@Html.DropDownList("categorias", (IEnumerable<SelectListItem>)ViewBag.ListaCategorias, "Seleccione una Categoria")*@
                                @*  @Html.DropDownListFor(model => model.Categoria, new SelectList(Model.Categoria,"idCategoria"), new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.DropDownList("ListaCategorias", ViewBag.ListaCategorias as SelectList, "Seleccione una Categoria", htmlAttributes: new { @class = "form-control" })
                                @* @Html.DropDownListFor(model => model.Categoria, ViewBag.ListaCategorias as SelectList, "Seleccione una Categoria", htmlAttributes: new { @class = "form-control" })*@
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="form-actions">
                <input class="btn btn-primary" type="submit" value="Buscar" />
            </div>

        }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Codigo</th>
        <th>Descripcion</th>
        <th>Precio Unitario</th>
        <th>Categoria</th>
        <th></th>

    </tr>
    @foreach (var objProducto in Model)
    {
        <tr>
            <th>@objProducto.IdProducto</th>
            <th>@objProducto.Nombre</th>
            <th>@objProducto.PrecioUnitario</th>
            <th>@objProducto.Categoria</th>
            <td><a class="btn btn-success" href="~/Venta/CargaProducto/@objProducto.IdProducto"><span class="glyphicon glyphicon-eye-open"></span></a></td>
        </tr>
    }
    <tr></tr>
</table>

<div class="text-primary text-danger text-center">
    @ViewBag.MensajeError;
</div>
